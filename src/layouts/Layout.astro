---
import Head from "../components/Head.astro";
import background from "../assets/background.svg";
---

<!doctype html>
<html lang="en">
  <Head />
  <body>
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <slot />
  </body>
</html>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
</style>
